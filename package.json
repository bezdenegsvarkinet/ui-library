{
	"name": "@bezdenegsvarkinet/ui-library",
	"private": false,
	"version": "1.1.1",
	"type": "module",
	"files": [
		"dist"
	],
	"sideEffects": [
		"**/*.css"
	],
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./styles.css": "./dist/index.css"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org"
	},
	"scripts": {
		"dev": "vite",
		"build:css": "tailwindcss -i src/index.css -o dist/index.css",
		"build:js": "tsup",
		"build": "pnpm build:js && pnpm build:css",
		"lint": "eslint .",
		"preview": "vite preview",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"chromatic": "chromatic --project-token=${CHROMATIC_PROJECT_TOKEN}",
		"chromatic:ci": "chromatic --exit-zero-on-changes --project-token=${CHROMATIC_PROJECT_TOKEN}",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"changeset:publish": "changeset publish",
		"prepack": "pnpm build"
	},
	"peerDependencies": {
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.575.0",
		"radix-ui": "^1.4.3",
		"react": "^18.0.0 || ^19.0.0",
		"react-dom": "^18.0.0 || ^19.0.0",
		"tailwind-merge": "^3.5.0",
		"tailwindcss": "^4.2.1"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@chromatic-com/storybook": "^5.0.1",
		"@eslint/js": "^9.39.1",
		"@storybook/addon-a11y": "^10.2.13",
		"@storybook/addon-docs": "^10.2.13",
		"@storybook/addon-vitest": "^10.2.13",
		"@storybook/react-vite": "^10.2.13",
		"@tailwindcss/cli": "^4.2.1",
		"@tailwindcss/vite": "^4.2.1",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.1",
		"@vitest/browser-playwright": "^4.0.18",
		"@vitest/coverage-v8": "^4.0.18",
		"chromatic": "^15.2.0",
		"eslint": "^9.39.1",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-refresh": "^0.4.24",
		"eslint-plugin-storybook": "^10.2.13",
		"globals": "^16.5.0",
		"playwright": "^1.58.2",
		"shadcn": "^3.8.5",
		"storybook": "^10.2.13",
		"tsup": "^8.5.1",
		"tw-animate-css": "^1.4.0",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.48.0",
		"vite": "^7.3.1",
		"vite-plugin-dts": "^4.5.4",
		"vitest": "^4.0.18"
	}
}