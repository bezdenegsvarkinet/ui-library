{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"noEmit": false,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": ["src/index.ts", "src/stories/**/*.tsx", "src/stories/**/*.ts"],
	"exclude": ["src/**/*.stories.ts", "src/**/*.stories.tsx", "src/main.tsx", "src/App.tsx", "node_modules"]
}